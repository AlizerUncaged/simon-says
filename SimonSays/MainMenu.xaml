<UserControl x:Class="SimonSays.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="Black" x:Name="MainMenuGrid" SizeChanged="MainMenuGrid_SizeChanged">

        <!-- Simple Matrix Background -->
        <Rectangle x:Name="MatrixBackground" Fill="Black"/>

        <!-- Animated Matrix Columns (simplified) -->
        <ItemsControl x:Name="MatrixColumns">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Overlay with main content -->
        <Grid>
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
                    <GradientStop Color="#00000000" Offset="0"/>
                    <GradientStop Color="#00000060" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="TitleText" Text="SIMON SAYS" FontSize="64" FontWeight="Black"
                          Foreground="#00FF41" FontFamily="Segoe UI Black" HorizontalAlignment="Center"
                          Margin="0,0,0,25" TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF41" BlurRadius="25" ShadowDepth="0" Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="&gt;&gt;&gt; NEURAL PATTERN RECOGNITION PROTOCOL &lt;&lt;&lt;"
                          FontSize="20" Foreground="#00AA00" FontFamily="Consolas"
                          HorizontalAlignment="Center" Margin="0,0,0,60" Opacity="0.9"/>

                <Button x:Name="StartButton" Content="[ INITIALIZE SEQUENCE ]"
                       FontSize="28" FontFamily="Consolas" Foreground="#00FF41"
                       Background="#0a0a0a" BorderBrush="#00FF41" BorderThickness="3"
                       Padding="30,15" Click="StartButton_Click" Cursor="Hand"
                       FontWeight="Bold">
                    <Button.Effect>
                        <DropShadowEffect Color="#00FF41" BlurRadius="25" ShadowDepth="0" Opacity="0.8"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#00FF4130"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.08" ScaleY="1.08"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#00FF4150"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Simple scanning line -->
            <Rectangle x:Name="ScanLine" Width="2" Fill="#00FF4160"
                       HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="ScanTransform"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Grid>
    </Grid>
</UserControl>